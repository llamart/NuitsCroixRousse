{% extends "layout.html.twig" %}
{% set concertMenu = true %}

{% block title %}Recherche de concerts{% endblock %}

{% block content %}
<h2 class="text-center">{{ block('title') }}</h2>
<div class="well">
    <form class="form-horizontal" role="form" action="/concerts/results/" method="post">
        <div class="form-group">
            <label class="col-sm-2 col-sm-offset-1 control-label">Genre</label>
            <div class="col-sm-7">
                <select class="form-control" name="genre">
                    {% for genre in genres %}
                        <option value="{{ genre.id }}">{{ genre.name }}</option>
                    {% endfor %}
                </select>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-3 col-sm-offset-5">
                <button type="submit" class="btn btn-default btn-primary"><span class="glyphicon glyphicon-search"></span> Rechercher</button>
            </div>
        </div>
    </form>
</div>
{% endblock %}