{% extends "layout.html.twig" %}
{% set concertMenu = true %}

{% block title %}Concerts{% endblock %}

{% block content %}
<h2 class="text-center">{{ block('title') }}</h2>
{% if drugs %}
    <div class="table-responsive">
        <table class="table table-hover table-condensed">
            <thead>
                <tr>
                    <th> Artiste</th>
                    <th> Date</th>
                    <th>Lieu</th>
                    <th>Genre</th>
                </tr>
            </thead>
            {% for concert in concerts %}
                <tr>
                    <td><a href="/concerts/{{ concert.id }}">{{ concert.artist }}</a></td>
                    <td>{{ concert.date }}</td>
                    <td>{{ concert.place }}</td>
                    <td>{{ concert.gen.id }}</td>
                </tr>
            {% endfor %}
        </table>
    </div>
{% else %}
    <div class="alert alert-warning">Aucun concert trouv√©.</div>
{% endif %}   
{% endblock %}